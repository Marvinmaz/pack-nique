{% extends "base.html.twig" %}
    {% block title %}Pack Nique{% endblock %}
	{% block stylesheets %}
		<link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />  
		<link href="{{ asset('assets/css/all.min.css') }}" rel="stylesheet" />  
		<link href="{{ asset('assets/css/templatemo-style.css') }}" rel="stylesheet" />
		<link href="{{ asset('assets/css/slideshow.css') }}" rel="stylesheet" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
		<link rel="icon" href="{{ asset('assets/img/logo3.png') }}">
	{% endblock %}

	{% block javascripts %}
		{{parent()}}
		<script>
			$(document).ready(function(){
				// Handle click on paging links
				$('.tm-paging-link').click(function(e){
					e.preventDefault();
					var page = $(this).text().toLowerCase();
					$('.tm-gallery-page').addClass('hidden');
					$('#tm-gallery-page-' + page).removeClass('hidden');
					$('.tm-paging-link').removeClass('active');
					$(this).addClass("active");
				});
			});
		</script>
	{% endblock %}



	{% block body %}
	{{ parent()}}

	<div class="container">
		<div class="placeholder">
			<div class="parallax-window" data-parallax="scroll" data-image-src="{{ asset('assets/img/2.jpeg') }}">
				<div class="tm-header">
					<div class="row tm-header-inner">
						<div class="col-md-6 col-12">
							<img src="{{ asset('assets/img/logo3.png') }}" alt="Logo" class="tm-site-logo" /> 
							<div class="tm-site-text-box">
								<h1 class="tm-site-title">Pack Nique</h1>
								<h6 class="tm-site-description">Le plaisir de la nature !</h6>	
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<main>
			<div class="sana">
			<header class="row tm-welcome-section">
				<h2 class="col-12 text-center tm-section-title">Bienvenue à Pack Nique 
					{% if is_granted('IS_AUTHENTICATED_FULLY') %} 
						{{ app.user.username}}
					{% endif %}
				</h2>
				<p class="col-12 text-center">Nous sommes ici pour vous préparer les délicieux packs pour profiter de vos moments!</p>
			</header>
			</div>
			<div class="tm-paging-links">
				<nav>
					<ul>
						<li class="tm-paging-item"><a href="#" class="tm-paging-link active">Anniversaire</a></li>
						<li class="tm-paging-item"><a href="#" class="tm-paging-link">Romantique</a></li>
						<li class="tm-paging-item"><a href="#" class="tm-paging-link">Vegan</a></li>
						<li class="tm-paging-item"><a href="#" class="tm-paging-link">végétarien</a></li>
						<li class="tm-paging-item"><a href="#" class="tm-paging-link">Halal</a></li>
						<li class="tm-paging-item"><a href="#" class="tm-paging-link">Barbeque</a></li>
					</ul>
				</nav>
			</div>
		
			<div class="content-width">
				<div class="slideshow">
				  <!-- Slideshow Items -->
				  <div class="slideshow-items">
					<div class="item">
					  <div class="item-image-container">
						<img class="item-image" src="{{ asset('assets/img/gallery/01.jpg')}}" />
					  </div>
				
					  <!-- Staggered Description Elements -->
					  <div class="item-description">
						<span class="vertical-part">
						  <b>Nam in suscipit nisi, sit amet consectetur metus. Ut sit amet tellus accumsan</b>
						</span>
					  </div>
					</div>
					<div class="item">
					  <div class="item-image-container">
						<img class="item-image" src="{{ asset('assets/img/gallery/02.jpg')}}" />
					  </div>
					  <!-- Staggered Header Elements -->
					
					  <!-- Staggered Description Elements -->
					  <div class="item-description">
						<span class="vertical-part">
						  <b>Spotify</b>
						</span>
						<span class="vertical-part">
						  <b>ipsum</b>
						</span>
						<span class="vertical-part">
						  <b>dolor</b>
						</span>
						<span class="vertical-part">
						  <b>sit</b>
						</span>
					  </div>
					</div>
					<div class="item">
					  <div class="item-image-container">
						<img class="item-image" src="{{ asset('assets/img/gallery/03.jpg')}}" />
					  </div>
					  
					
					  <!-- Staggered Description Elements -->
					  <div class="item-description">
						<span class="vertical-part">
						  <b>Airbnb</b>
						</span>
						<span class="vertical-part">
						  <b>ipsum</b>
						</span>
					  </div>
					</div>
				  </div>
				  <div class="controls">
					<ul>
					  <li class="control" data-index="0"></li>
					  <li class="control" data-index="1"></li>
					  <li class="control" data-index="2"></li>
					</ul>
				  </div>
				</div>
			  </div>


			  	<div class="trier">
			<select class="form-select" aria-label="Default select example">
				<option selected>Trier par</option>
				<option value="1">Prix ordre croissance</option>
				<option value="2">Prix ordre decroissance</option>
				<option value="3">Avis</option>
				<option value="3">Vente</option>
			</select>
			</div>

			<!-- Gallery -->
			<div class="row tm-gallery">
				<!-- gallery page 1 -->
				<div id="tm-gallery-page-pizza" class="tm-gallery-page">
					<article class="col-lg-3 col-md-4 col-sm-6 col-12 tm-gallery-item">
						<figure>
							<img src="{{ asset('assets/img//gallery/01.jpg')}}" alt="Image" class="img-fluid tm-gallery-img" />
							<figcaption>
								<h4 class="tm-gallery-title">Fusce dictum finibus</h4>
								<p class="tm-gallery-description">Nam in suscipit nisi, sit amet consectetur metus. Ut sit amet tellus accumsan</p>
								<p class="tm-gallery-price">$45 / $55</p>
							</figcaption>
						</figure>
					</article>
            {% for pack in packs %}                 
                <div class="card col-3 mx-2 my-2">
                    <div class="card-body">                           
                        <img src="/uploads/images/{{ pack.picture }}" class="card-img-top img-thumbnail">
                        <h5 class="card-title">{{ pack.name }}</h5>                       
                        <p class="card-text">{{ pack.content }}</p>
                        <p class="card-text">{{ pack.price }} €</p>
                        <a href="/update-pack/{{ pack.id }}" class="card-link btn btn-warning">Modifier ce pack</a>
                        <a href="/delete-pack/{{ pack.id }}" class="card-link btn btn-danger">supprimer ce pack</a>
                        <a href="/create-pack/" class="card-link btn btn-primary">Créer un pack</a>
                        <a href="/read-pack/{{ pack.id }}" class="card-link btn btn-success">Voir en détail ce pack</a>
                    </div>
                </div>
            {% endfor %}
				</div> <!-- gallery page 1 -->

		</main>

		<footer class="tm-footer text-center">
			<p>Developed by Sana, Marvin, Steven, Sébastien
            
            | Design: <a rel="nofollow" href="https://packnique.fr">Pack Nique</a></p>
		</footer>
	</div>

	
{% endblock %}
