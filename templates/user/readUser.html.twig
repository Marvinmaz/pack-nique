{% include 'base.html.twig' %}

{% block body %}


<div class="container mt-5">
    <div class="row" style="justify-content: center; ">
        <div class="col-md-offset-3 col-md-4" style=" border: 1px solid black;  background-color: #FFEAE5; padding: 0%;">
            <div style="background-color: black; color: white; width: 100%; text-align: center;" >
                <p>modifier votre compte</p>
            </div>
            {{form_start(form, {'attr':{'novalidate':'novalidate'}}) }}  
                {{form_row(form.firstname)}}  
                {{form_row(form.name)}}  
                {{form_row(form.age)}}  
                {{form_row(form.tel)}}  
                {{form_row(form.address)}}  
                {{form_row(form.postalcode)}}  
                {{form_row(form.country)}}  
                <input type="submit"  class="btn btn-primary w-100" value="envoyer">
            {{form_end(form)}}
        </div>
    </div>
</div>
<style>
    .form-group{ padding: 2%; margin: 0%;}
</style>
{% endblock %}

{% block javascripts %}
        <script>
            // Add the following code if you want the name of the file appear on select
            window.addEventListener("load", event => {
                $(".custom-file-input").on("change", function() {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
                });
            });
        </script>
{% endblock %}