{% extends 'base.html.twig' %}
	{% block stylesheets %}
        {{ parent() }}
		<link rel="icon" href="{{ asset('assets/img/logo3.png') }}">
		<link href="{{ asset('assets/css/style.css') }}" rel="stylesheet" />
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet"> 
    {% endblock %}
{% block body %}
    {{ parent() }}

    {% set route = app.request.get("_route") %}

<div class="container mt-5 pt-3">
    <div class="row" style="justify-content: center;">
        <div class="col-md-offset-3 col-md-4" style=" border: 1px solid black;  background-color: #FFEAE5; padding: 1%; border-radius: 10px;">
            <p style="border-bottom: black 1px solid; text-align: center;">Modifier votre compte !</p>
            {{form_start(form, {'attr':{'novalidate':'novalidate'}}) }}  
                {{form_row(form.firstname,  {"attr" : {'placeholder':'Entrez votre prénom'}})}}  
                {{form_row(form.name , {"attr" : {'placeholder':'Entrez votre nom'}})}}  
                {{form_row(form.age,  {"attr" : {'placeholder':'Entrez votre age'}})}}  
                {{form_row(form.tel,  {"attr" : {'placeholder':'Entrez votre numéro de téléphone '}})}}  
                {{form_row(form.address,  {"attr" : {'placeholder':'Entrez votre adresse '}})}}  
                {{form_row(form.postalcode,  {"attr" : {'placeholder':'Entrez votre code postal'}})}}  
                {{form_row(form.country,  {"attr" : {'placeholder':'Entrez votre ville'}})}}  
                <input type="submit"  class="btn btn-primary w-100" value="Envoyer">
            {{form_end(form)}}
        </div>
    </div>
</div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
        <script>
            // Add the following code if you want the name of the file appear on select
            window.addEventListener("load", event => {
                $(".custom-file-input").on("change", function() {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
                });
            });
        </script>
{% endblock %}