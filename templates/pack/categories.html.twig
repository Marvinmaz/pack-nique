<!--End of Tawk.to Script-->



	<div class="container">
		<div class="placeholder">
			<div class="parallax-window" data-parallax="scroll" data-image-src="{{ asset('assets/img/2.jpeg') }}">
				<div class="tm-header">
					<div class="row tm-header-inner">
						<div class="col-md-6 col-12">
							<img src="{{ asset('assets/img/logo3.png') }}" alt="Logo" class="tm-site-logo" /> 
							<div class="tm-site-text-box">
								<h1 class="tm-site-title">Pack Nique</h1>
								<h6 class="tm-site-description">Le plaisir de la nature !</h6>	
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<main>
			<div class="sana">
			<header class="row tm-welcome-section">
				<h2 class="col-12 text-center tm-section-title">Bienvenue sur Pack Nique 
					{% if is_granted('IS_AUTHENTICATED_FULLY') %} 
						{{ app.user.username}}
					{% endif %}
				</h2>
				<p class="col-12 text-center">Nous sommes ici pour vous préparer les délicieux packs pour profiter de vos moments!</p>
			</header>
			</div>
			<div class="tm-paging-links">
				{% set category = app.request.attributes.get("_route_params")["category"] %}
				<nav>
					<ul>
						<li class="tm-paging-item col-xs-3 col-md-offset-1 col-md-2" onclick="location.href='/Categories/réunion'"><a class="tm-paging-link {{ (category == "réunion") ? 'active' : '' }}">Réunion</a></li>
						<li class="tm-paging-item col-xs-3 col-md-2" onclick="location.href='/Categories/pique-nique'"><a class="tm-paging-link {{ (category == "pique-nique") ? 'active' : '' }}">Pique-nique</a></li>
						<li class="tm-paging-item col-xs-3 col-md-2" onclick="location.href='/Categories/duo'"><a class="tm-paging-link {{ (category == "duo") ? 'active' : '' }}">Duo</a></li>
						<li class="tm-paging-item col-xs-3 col-md-2" onclick="location.href='/Categories/soirée'"><a class="tm-paging-link {{ (category == "soirée") ? 'active' : '' }}">Soirée</a></li>
						<li class="tm-paging-item col-xs-3 col-md-2" onclick="location.href='/Categories/romantique'"><a class="tm-paging-link {{ (category == "romantique") ? 'active' : '' }}">Romantique</a></li>
						<li class="tm-paging-item col-xs-3 col-md-2" onclick="location.href='/Categories/vegan'"><a class="tm-paging-link {{ (category == "vegan") ? 'active' : '' }}">Vegan</a></li>
						<li class="tm-paging-item col-xs-3 col-md-2" onclick="location.href='/Categories/anniversaire'"><a class="tm-paging-link {{ (category == "anniversaire") ? 'active' : '' }}">Anniversaire</a></li>
						<li class="tm-paging-item col-xs-3 col-md-2" onclick="location.href='/Categories/végétarien'"><a class="tm-paging-link {{ (category == "vegétarien") ? 'active' : '' }}">végétarien</a></li>
						<li class="tm-paging-item col-xs-3 col-md-2" onclick="location.href='/Categories/halal'"><a class="tm-paging-link {{ (category == "halal") ? 'active' : '' }}">Halal</a></li>
						<li class="tm-paging-item col-xs-3 col-md-2" onclick="location.href='/Categories/bbq'"><a class="tm-paging-link {{ (category == "bbc") ? 'active' : '' }}">Barbecue</a></li>
						<li class="tm-paging-item col-md-offset-5 col-md-3" onclick="location.href='/'"><a class="tm-paging-link">Voir tous les packs</a></li>
					</ul>
				</nav>
			</div>
			
			<div class="container">
				<div class="row">						
					<div class="slideshow">
						<!-- Slideshow Items -->
						<div class="slideshow-items">
							<div class="item">
								<div class="item-image-container">
								<img class="item-image" src="{{ asset('assets/img/gallery/01.jpg')}}" />
							</div>
							<!-- Staggered Header Elements -->

							<!-- Staggered Description Elements -->
							<div class="item-description">
								<span class="vertical-part">
								<b>Profitez des beaux jours pour faire des repas au grand air ! Pour votre pique-nique : cakes, salades, sandwichs, tartes et terrines à emporter dans votre panier gourmand.</b>
								</span>
							</div>
						</div>	
						
							<div class="item">
								<div class="item-image-container">
									<img class="item-image" src="{{ asset('assets/img/gallery/02.jpg')}}" />
								</div>
								<!-- Staggered Header Elements -->
						
								<!-- Staggered Description Elements -->
								<div class="item-description">
									<span class="vertical-part">
									<b>Pensez à prendre de l’eau, des couverts, des assiettes, des verres et surtout un tire-bouchon et des sacs poubelles !</b>
									</span>
								</div>
							</div>
							<div class="item">
								<div class="item-image-container">
									<img class="item-image" src="{{ asset('assets/img/gallery/03.jpg')}}" />
								</div>
								<!-- Staggered Header Elements -->
							
								<!-- Staggered Description Elements -->
								<div class="item-description">
									<span class="vertical-part">
									<b>Une astuce si vous faites un pique-nique entre ami, demandez à chacun de prendre son assiette et ses couverts : cela fera beaucoup moins de vaisselle jetable.</b>
									</span>
								</div>
							</div>
						<div class="controls">
							<ul>
								<li class="control" data-index="0"></li>
								<li class="control" data-index="1"></li>
								<li class="control" data-index="2"></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			

			<!-- Gallery -->
			<div class="row tm-gallery">
				<div id="tm-gallery-page-pizza" class="tm-gallery-page">
				 {% for pack in packs %} 
                    {% set currentPath = path(app.request.attributes.get('_route'),
                        app.request.attributes.get('_route_params')) %}
                    {% if category in pack.categories %} 
					<article class="col-lg-3 col-md-4 col-sm-6 col-12 tm-gallery-item" style="margin-bottom: 30px; margin-right: 10px">
						<figure>
							<img src="/uploads/images/{{ pack.picture }}" class="card-img-top img-thumbnail" >
							<figcaption>
								<h5 class="card-title">{{ pack.name }}</h5> 
								<p style="margin: 0%; font-weight: bold;">Description du pack : </p> 
								<p class="card-text" style="margin: 0%;">{{ pack.content }}</p>
								<p class="card-text"><span style="font-weight: bolder;">prix :</span> {{ pack.price }} €</p>
								{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								{% if app.user.isAdmin(1) %}
								<a href="/update-pack/{{ pack.id }}" class="card-link btn btn-warning mb-2"><i class="fas fa-edit"></i></a>
								<a href="/delete-pack/{{ pack.id }}" class="card-link btn btn-danger mb-2"><i class="fas fa-trash-alt"></i></a><br>
								{% endif %}
								{% endif %}
								<a href="/read-comments/{{ pack.id }}" style="margin-left: 7px; padding-top: 7px"><i class="fas fa-info-circle fa-2x"></i></a><br>
								<div class="sana2">

								<a href="/basket/add/{{ pack.id }}"><i class="fas fa-shopping-cart"></i></a>
								
								</figcaption>
								
								</figure>
					</article>
                    {% endif %}
            	 {% endfor %}
				</div> <!-- gallery page 1 -->
			</div>
		</main>

		<footer class="tm-footer text-center">
			<p>Developed by Sana, Marvin, Steven, Sébastien
            
            | Design: <a rel="nofollow" href="https://packnique.fr">Pack Nique</a></p>
		</footer>
	</div>

	
{% endblock %}
