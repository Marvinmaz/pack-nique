{% extends 'base.html.twig' %}
	{% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />  
		<link href="{{ asset('assets/css/all.min.css') }}" rel="stylesheet" />  
		<link href="{{ asset('assets/css/templatemo-style.css') }}" rel="stylesheet" />
		<link href="{{ asset('assets/css/slideshow.css') }}" rel="stylesheet" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
		<link rel="icon" href="{{ asset('assets/img/logo3.png') }}">
		<link href="{{ asset('assets/css/manager.css') }}" rel="stylesheet" />
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet"> 
    {% endblock %}
{% block body %}
    {{ parent() }}

    {% set route = app.request.get("_route") %}


    <div class="d-flex justify-content-center mt-4">
        <div>
        <h2 style="color:red "> Mettre à jour le pack / GESTION ADMINISTRATEUR</h2>    
            <div class="col-5">
                {{ form_start(form, {'attr' : {'novalidate' : 'novalidate'}}) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.picture) }}
                    {{ form_row(form.price) }}
                    {{ form_row(form.categories) }}
                    {{ form_row(form.content) }}
                    <button type="submit" class="btn btn-primary">Mettre à jour</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
        <script>
            // Add the following code if you want the name of the file appear on select
            window.addEventListener("load", event => {
                $(".custom-file-input").on("change", function() {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
                });
            });
        </script>
{% endblock %}