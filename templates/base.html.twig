<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
          <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"/>
          <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
            <script src="{{ asset('assets/js/parallax.min.js') }}"></script>
            <script src="{{ asset('assets/js/slideshow.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
            <!-- Icone temporaire -->
              <a class="navbar-brand" href="/"><img  style="height: 30px; " src="{{ asset('assets/img/logo3.png') }}" alt=""></a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/contact" > <i class="fas fa-address-book"  style="color: grey;"></i> Contact</a>
                  </li>
                  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                  <li class="nav-item">
                    <a class="nav-link" href="/basket"><i class="fas fa-shopping-cart" style="color: orange;"></i> Panier</a>
                  </li>
                  {% endif %}
                  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                      <li class="nav-item">
                        <a class="nav-link" href="/logout"> <i class="fas fa-power-off" style="color: red;"></i> deconnexion</a>
                      </li>
                    {% else %}
                      <li class="nav-item">
                        <a class="nav-link" href="/login"> <i class="fas fa-power-off" style="color: rgb(94, 221, 94);"></i> Connexion</a>
                      </li>
                  {% endif %}
                  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                      <a class="nav-link" href="/"><i class="fas fa-user" style="color: royalblue;"></i> Votre compte {{ app.user.username }}</a>
                    </li>
                  {% endif %}
                  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                  {% else %}
                  <li class="nav-item">
                    <a class="nav-link" href="/create-account"><i class="fas fa-user" style="color: royalblue;"></i> Pas encore de compte ?</a>
                  </li>
                  {% endif %}
                  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                  <li class="nav-item">
                    <a class="nav-link" href="/create-pack"><i class="fas fa-plus-circle" style="color: #81ecec"></i> Cr√©er un pack</a>
                  </li>
                  {% endif %}
  
                </ul>
              </div>
            </div>
          </nav>
        {% endblock %}
    </body>
</html>