{% extends "base.html.twig" %}
	{% block stylesheets %}
        {{ parent() }}
		<link rel="icon" href="{{ asset('assets/img/logo3.png') }}">
		<link href="{{ asset('assets/css/style.css') }}" rel="stylesheet" />
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet"> 
    {% endblock %}
{% block body %}
    {{ parent()}}
    <div class="container mt-5 pt-3">
        <div class="row" style="justify-content: center; ">
            <div class="col-md-offset-3 col-md-4" style=" border: 1px solid black;  background-color: #FFEAE5; padding: 0%; border-radius: 10px;">
                <div style="background-color: black; color: white; width: 100%; text-align: center; border-radius: 5px;" >
                    <p>Connexion</p>
                </div>
                {% if error %}
                    <div class="alert alert-danger">mot de passe ou pseudo invalide</div>
                {% endif %}
                <form method="post" style="padding: 10px;">
                    <label for="_username">Pseudo</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="_username" class="form-control" required placeholder="Entrez votre pseudo">
                    <label for="_password">Mot de passe</label>
                    <input type="password" name="_password" id="_password" class="form-control" required placeholder="Entrez votre mot de passe">
                    <input type="submit" value="Se connecter" class="btn btn-primary" style="margin-top: 15px; width: 100%;">
                </form>
                <p style="text-align: center;">Je n'ai pas de compte |<a href="/create-account" style="padding: 10px; text-decoration: none;">M'inscrire</a></p>
            </div>
        </div>
    </div>

{% endblock %}